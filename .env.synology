# 群晖 NAS 环境变量配置文件
# 复制此文件为 .env 并根据需要修改

# 应用版本
VERSION=latest

# 构建时间 (自动生成)
BUILDTIME=

# 群晖用户和组 ID (标准配置)
PUID=100
PGID=100

# 应用配置
PORT=8080
GIN_MODE=release
TZ=Asia/Shanghai

# 数据目录路径 (群晖标准路径)
DATA_DIR=/volume1/docker/lazybala

# Docker 镜像配置
DOCKER_IMAGE=lazybala:synology
CONTAINER_NAME=lazybala

# 网络配置
NETWORK_NAME=lazybala-network

# 资源限制
CPU_LIMIT=2.0
MEMORY_LIMIT=1G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=256M
